<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/blue"
    style="@style/LayoutWidMatch_HeiWrap">

    <RelativeLayout
        style="@style/LayoutWidMatch_HeiWrap"
        android:layout_height="@dimen/size45">
        <LinearLayout
            style="@style/LayoutMatch"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/header_end_txt"
            android:layout_toEndOf="@+id/header_start_txt"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/header_center_txt"
                style="@style/TextOpenSansSemiBold"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text16" />

            <TextClock
                android:id="@+id/clock_txt"
                style="@style/TextOpenSansRegular"
                android:format12Hour="hh:mm:ss a"
                android:format24Hour="hh:mm:ss a"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="@dimen/text14"  />
        </LinearLayout>
        <TextView
            style="@style/TextOpenSansSemiBold"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text17" />

        <TextView
            android:id="@+id/header_start_txt"
            style="@style/TextOpenSansSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/size20"
            android:paddingEnd="@dimen/size20"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text13"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/header_end_txt"
            style="@style/TextOpenSansSemiBold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/size20"
            android:paddingEnd="@dimen/size20"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text13"
            android:visibility="invisible" />
    </RelativeLayout>
</android.support.v7.widget.CardView>